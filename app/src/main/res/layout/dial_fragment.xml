<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DialFragment">

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="114dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="#FF1A212A"
        android:textSize="60sp"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="110dp"
        android:background="@drawable/top_nonround_shadow_bg"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneNumber" />

    <ImageView
        android:id="@+id/dialPad1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/call_button_bg"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/dial_pad_1"
        android:tag="1"
        app:layout_constraintEnd_toStartOf="@id/dialPad2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shadow" />

    <ImageView
        android:id="@+id/dialPad2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:background="@drawable/call_button_bg"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/dial_pad_2"
        android:tag="2"
        app:layout_constraintEnd_toStartOf="@id/dialPad3"
        app:layout_constraintStart_toEndOf="@id/dialPad1"
        app:layout_constraintTop_toTopOf="@id/dialPad1" />

    <ImageView
        android:id="@+id/dialPad3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:background="@drawable/call_button_bg"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/dial_pad_3"
        android:tag="3"
        app:layout_constraintBottom_toBottomOf="@id/dialPad1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialPad2"
        app:layout_constraintTop_toTopOf="@id/dialPad1" />

    <ImageView
        android:id="@+id/dialPad4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/call_button_bg"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/dial_pad_4"
        android:tag="4"
        app:layout_constraintEnd_toEndOf="@id/dialPad1"
        app:layout_constraintStart_toStartOf="@id/dialPad1"
        app:layout_constraintTop_toBottomOf="@id/dialPad1" />

    <ImageView
        android:id="@+id/dialPad5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/call_button_bg"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/dial_pad_5"
        android:tag="5"
        app:layout_constraintBottom_toBottomOf="@id/dialPad4"
        app:layout_constraintEnd_toEndOf="@id/dialPad2"
        app:layout_constraintStart_toStartOf="@id/dialPad2"
        app:layout_constraintTop_toBottomOf="@id/dialPad2"
        app:layout_constraintTop_toTopOf="@id/dialPad4" />

    <ImageView
        android:id="@+id/dialPad6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/call_button_bg"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/dial_pad_6"
        android:tag="6"
        app:layout_constraintBottom_toBottomOf="@id/dialPad4"
        app:layout_constraintEnd_toEndOf="@id/dialPad3"
        app:layout_constraintStart_toStartOf="@id/dialPad3"
        app:layout_constraintTop_toBottomOf="@id/dialPad3"
        app:layout_constraintTop_toTopOf="@id/dialPad4" />

    <ImageView
        android:id="@+id/dialPad7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/call_button_bg"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/dial_pad_7"
        android:tag="7"
        app:layout_constraintEnd_toEndOf="@id/dialPad1"
        app:layout_constraintStart_toStartOf="@id/dialPad1"
        app:layout_constraintTop_toBottomOf="@id/dialPad4" />

    <ImageView
        android:id="@+id/dialPad8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/call_button_bg"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/dial_pad_8"
        android:tag="8"
        app:layout_constraintBottom_toBottomOf="@id/dialPad7"
        app:layout_constraintEnd_toEndOf="@id/dialPad2"
        app:layout_constraintStart_toStartOf="@id/dialPad2"
        app:layout_constraintTop_toBottomOf="@id/dialPad5"
        app:layout_constraintTop_toTopOf="@id/dialPad7" />

    <ImageView
        android:id="@+id/dialPad9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/call_button_bg"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/dial_pad_9"
        android:tag="9"
        app:layout_constraintBottom_toBottomOf="@id/dialPad7"
        app:layout_constraintEnd_toEndOf="@id/dialPad3"
        app:layout_constraintStart_toStartOf="@id/dialPad3"
        app:layout_constraintTop_toBottomOf="@id/dialPad6"
        app:layout_constraintTop_toTopOf="@id/dialPad7" />

    <ImageView
        android:id="@+id/dialPadStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/call_button_bg"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/dial_pad_star"
        android:tag="star"
        app:layout_constraintEnd_toEndOf="@id/dialPad1"
        app:layout_constraintStart_toStartOf="@id/dialPad1"
        app:layout_constraintTop_toBottomOf="@id/dialPad7" />

    <ImageView
        android:id="@+id/dialPad0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/call_button_bg"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/dial_pad_0"
        android:tag="0"
        app:layout_constraintBottom_toBottomOf="@id/dialPadStar"
        app:layout_constraintEnd_toEndOf="@id/dialPad2"
        app:layout_constraintStart_toStartOf="@id/dialPad2"
        app:layout_constraintTop_toBottomOf="@id/dialPad8"
        app:layout_constraintTop_toTopOf="@id/dialPadStar" />

    <ImageView
        android:id="@+id/dialPadPound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/call_button_bg"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/dial_pad_pound"
        android:tag="pound"
        app:layout_constraintBottom_toBottomOf="@id/dialPadStar"
        app:layout_constraintEnd_toEndOf="@id/dialPad3"
        app:layout_constraintStart_toStartOf="@id/dialPad3"
        app:layout_constraintTop_toTopOf="@id/dialPadStar" />

    <ImageView
        android:id="@+id/dialPadDial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/call_button_bg"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/icon_dial"
        android:layout_marginTop="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialPad0" />

    <ImageView
        android:id="@+id/dialPadDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/call_button_bg"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/icon_delete_number"
        app:layout_constraintEnd_toEndOf="@id/dialPad3"
        app:layout_constraintStart_toStartOf="@id/dialPad3"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/dialPadDial" />

</androidx.constraintlayout.widget.ConstraintLayout>